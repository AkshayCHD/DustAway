<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chatview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/app"
    tools:context="com.example.akshay.dustaway.LauncherActivity"
    style="@style/Widget.AppCompat.ButtonBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#eee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/region"
            android:layout_height="50dp"
            android:background="@color/mygreen"
            android:text="KOREA"
            android:layout_marginTop="20dp" />

        <Button
            android:layout_width="wrap_content"
            android:id="@+id/score"
            android:layout_height="50dp"
            android:background="@color/mygreen"
            android:text="2540"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:paddingTop="5dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="32dp"
    >

    <Button
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:onClick="dustbin"
        android:text="Dustbin"
        android:background="@drawable/dustbin"/>

</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="32dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Signed in as: Akshay Kumar"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"/>

    </android.support.v7.widget.CardView>
   
</LinearLayout>
